# MongoDB Connection String
# Replace with your MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Web3 Storage API Key
# Get this from https://web3.storage
NEXT_PUBLIC_WEB3_STORAGE_API_KEY=your_web3_storage_api_key_here

# Pinata API Keys
# Get these from https://app.pinata.cloud/developers/api-keys
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key_here
NEXT_PUBLIC_PINATA_API_SECRET=your_pinata_api_secret_here
PINATA_API_KEY=your_pinata_api_key_here
PINATA_API_SECRET=your_pinata_api_secret_here

# Blockchain Configuration
# Contract address on Sepolia testnet
NEXT_PUBLIC_CONTRACT_ADDRESS=0x3Dd2A16827E2D27ea0d59DEdBb40675219f44209

# RPC URL for Sepolia testnet
# You can get this from providers like Infura, Alchemy, or use public endpoints
NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/your_infura_key_here

# Optional: Private key for server-side transactions (development only)
# WARNING: Never commit the actual private key to version control
# PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Optional: Chain ID for Sepolia testnet
NEXT_PUBLIC_CHAIN_ID=11155111
